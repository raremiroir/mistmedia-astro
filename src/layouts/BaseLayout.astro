---
  import BaseHead from '../components/Base/BaseHead.astro';
  import Header from '../components/Main/Header/Header.astro';
  import Footer from '../components/Main/Footer.astro';
	import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

  const width = 'w-full sm:w-[95%] md:w-11/12 lg:w-5/6 xl:w-4/5 2xl:w-3/4';
  const mainClass = `mx-auto mt-24 ${width}`;
---
<!DOCTYPE html>
<html lang='nl'>
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>

  <body class="min-h-screen">
    <Header width={width} />
    <main class={mainClass}>
      <slot />
    </main>
    <Footer />
  </body>
</html>
