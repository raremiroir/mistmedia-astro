---
  import BaseHead from '../components/Base/BaseHead.astro';
  import Header from '../components/Main/Header/Header.astro';
  import Footer from '../components/Main/Footer.astro';
	import { SITE_TITLE, SITE_DESCRIPTION, widths } from '../consts';
---
<!DOCTYPE html>
<html lang='nl'>
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>

  <body class="min-h-screen">
    <Header width={widths} />
    <div class='mx-auto'>
      <slot />
    </div>
    <Footer />
  </body>
</html>
