---
import i18next, { t, changeLanguage } from "i18next";
// Astro components
// Main components
import BaseLayout from "@layouts/BaseLayout.astro";
import Page from "@/components/Core/Page/Page.astro";
import Section from "@/components/Core/Section/Section.astro";
import Hero from "@/components/Common/Hero/Hero.astro";
// Svelte components
// Consts
import type { Locales } from "@/types";
import PriceCalculator from "@/components/Pages/PriceCalculator.svelte";

changeLanguage("en");

const lang = i18next.language as Locales;
export const prerender = true;
---

<BaseLayout title={t("site:pages.home.title")}>
	<Page>
		<!-- HERO -->
		<!-- HERO -->
		<Hero slot="hero" alt title="Prijs Berekenen">
			<span slot="subtitle">
				Krijg een prijsindicatie voor jouw project in slechts 2 minuten. <br/>
            <span class="text-primary-500">Geheel vrijblijvend.</span>
			</span>
		</Hero>
		<!-- END HERO -->

		<!-- SERVICES -->
		<Section name="bereken-prijs" title={ `Bereken je prijs!` }>
			<PriceCalculator client:load />
		</Section>
		<!-- END SERVICES -->
	</Page>
</BaseLayout>
