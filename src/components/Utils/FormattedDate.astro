---
import { t } from 'i18next';
export interface Props {
	date: Date;
	type: 'updated' | 'published';
}

const { date, type } = Astro.props;
---

<time 
	datetime={date.toISOString()}
	class={`font-body font-semibold`}>
	{ type === 'updated' && t('blog.info.dates.updated') || t('blog.info.dates.created') }
	{
		date.toLocaleDateString('en-us', {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>
