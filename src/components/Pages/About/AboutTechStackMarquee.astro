---
import { Splide } from '@splidejs/splide';
import { Image } from '@astrojs/image/components';

import Slide from '@/components/Common/Slider/Slide.astro';
import SlideTrack from '@/components/Common/Slider/SlideTrack.astro';

import { TECHSTACK } from '@const/index';

const sliderClass = `splide cursor-grab active:cursor-grabbing`
const slideClass = `splide__slide bg-transparent opacity-60 hover:opacity-80 hover:scale-110 active:scale-95 cursor-pointer`
---

<script define:vars={Splide}>
   document.addEventListener( 'DOMContentLoaded', function () {
      var splide = new Splide( '#splide', {
         arrows: false,
         type   : 'loop',
         drag: 'free',
         focus: 'center',
         pagination: false,
         perPage: 12,
         gap: '2rem',
         autoScroll: {
            speed: 0.5,
            pauseOnHover: true,
            pauseOnFocus: false,
         },
         width: '100%',
         padding: {
            left: '0',
            right: '0',
         },
         breakpoints: {
            640: {
               perPage: 6,
            },
            768: {
               perPage: 7,
            },
         },
      } );
      splide.mount( window.splide.Extensions );
   });
</script>

<div 
   id="splide" class={sliderClass}
   role="group" aria-label="Example"> 

   <SlideTrack>
      {Object.values(TECHSTACK).map((brand) => (
         <><Slide type="solo_img" active hover name={brand.name} tip>
            <a href={brand.url} target="_blank" aria-label={brand.name}>
               <Image 
                  src={brand.svg}
                  format="svg"
                  alt={brand.name}
                  height={80}
                  width={80}
                  aspectRatio={1}
                  fit={'contain'}
                  background={'#00000000'}
               />
            </a>
         </Slide></>
      ))}
   </SlideTrack>

</div>