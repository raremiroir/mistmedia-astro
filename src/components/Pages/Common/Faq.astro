---
import { t } from "i18next";
// Astro components
import { Icon } from "astro-icon";
import Section from "@/components/Core/Section/Section.astro";
// Svelte components
import Accordeon from "@/components/Common/Accordeon/Accordeon.svelte";
import AccordeonItem from "@/components/Common/Accordeon/AccordeonItem.svelte";

let faqItems:{[key:string]:string}[] = [];
/* @ts-ignore */
t("home:faq.items").forEach((item) => {
	 faqItems.push({
		  question: item.question,
		  answer: item.answer,
	 })
});
---

<!-- FAQ -->
<Section name={t('site:pages.home.sections.faq')} title={`${t("home:faq.title")}`}>
   <Accordeon client:load>
      {faqItems.map((item, index) => (
         <><AccordeonItem key={index} title={item.question} icon client:load>
            <Icon name='ph:question-duotone' slot="icon" />
            {item.answer}
         </AccordeonItem></>
      ))}
   </Accordeon>
</Section>
<!-- END FAQ -->