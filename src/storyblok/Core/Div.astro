---
import LogoLettering from "@/components/Media/Logo/LogoLettering.svelte";
import { storyblokEditable } from '@storyblok/astro';
import type { SbBlokData } from '@storyblok/astro';
import StoryblokComponent from "@storyblok/astro/StoryblokComponent.astro";

const { blok } = Astro.props;

const { 
   width,
   klass = '',
} = blok;


type Widths = 'full' | '1/2' | '1/3' | '1/4' | '1/5' | '1/6' | 'auto' | '2/3' | '2/4' | '2/5' | '2/6' | '3/4' | '3/5' | '3/6' | '4/5' | '4/6' | '5/6';
const pickedWidth: Widths = width || 'full';

const widths: {
   [key in Widths]: string;
} = {
   full: 'w-full',
   '1/2': 'w-1/2',
   '1/3': 'w-1/3',
   '2/3': 'w-1/3',
   '1/4': 'w-1/4',
   '2/4': 'w-2/4',
   '3/4': 'w-3/4',
   '1/5': 'w-1/5',
   '2/5': 'w-2/5',
   '3/5': 'w-3/5',
   '4/5': 'w-4/5',
   '1/6': 'w-1/6',
   '2/6': 'w-2/6',
   '3/6': 'w-3/6',
   '4/6': 'w-4/6',
   '5/6': 'w-5/6',
   auto: 'w-auto',
}
---

<div 
   {...storyblokEditable(blok)} 
   class={`${klass} ${widths[pickedWidth]}`}>
   {
      blok.slot?.map((blok: SbBlokData) => {
        return <StoryblokComponent blok={blok} />
      })
   }
</div>