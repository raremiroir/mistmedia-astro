{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strictNullChecks": true,
    "baseUrl" : ".",
    "paths": {
      "@comp/*":    ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@pages/*":   ["src/pages/*"],
      "@public/*":  ["src/public/*"],
      "@styles/*":  ["src/styles/*"],
      "@utils/*": ["src/utils/*"],
      "@tstype/*":  ["src/types/*"],
      "@content/*": ["src/content/*"],
      "@stores/*":  ["src/stores/*"],
      "@consts/":   ["src/consts/*"]
    }
  }
}